<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Red Square -->
    <RelativeLayout
        android:id="@+id/red_square"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#8C1C13">

        <!-- Text: Hatid-Sundo -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Padala"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_back_background"
            android:contentDescription="Back Button"
            android:src="@drawable/ic_back_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/type_of_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/red_square">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_of_item"
        android:orientation="vertical">

        <!--        Document Type-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Document Type"
            android:paddingStart="10dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:paddingStart="10dp"
            android:hint="Enter Document Type"/>

        <!--        Number of Pages-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Number of Pages"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:paddingStart="10dp"
            android:hint="Enter Number of Pages"/>

        <!--        Size-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Document Size"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:paddingStart="10dp"
            android:hint="Enter Document Size"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/details_section"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="32dp"
        android:textSize="17sp"
        android:background="@drawable/button_background"
        android:text="Confirm"
        android:textColor="#8C1C13"
        android:textStyle="bold" />


</RelativeLayout>